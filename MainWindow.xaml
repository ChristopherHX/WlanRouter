<Window x:Class="WlanRouter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WlanRouter"
        mc:Ignorable="d"
        Title="Wlan Router (1.10)" Height="175" Width="300" ResizeMode="CanMinimize" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="control_btn" Content="Starten" Margin="10,10,10,94" Click="control_btn_Klick"/>
        <ComboBox x:Name="Inet_share_com"  VerticalAlignment="Bottom" Height="23" Margin="10,0,10,66" SelectedValuePath="Content"/>
        <TextBox x:Name="SSID_tbox" VerticalAlignment="Bottom" Height="23" Margin="10,0,10,38" TextWrapping="NoWrap"/>
        <PasswordBox x:Name="key_pbox" VerticalAlignment="Bottom" Margin="10,0,43,10" Height="23"/>
        <TextBox x:Name="key_tbox" VerticalAlignment="Bottom" Margin="10,0,43,10" Height="23" Visibility="Collapsed"/>
        <Button x:Name="key_b" VerticalAlignment="Bottom" Margin="0,0,10,10" Height="23" HorizontalAlignment="Right" Width="28" Content="abc"/>
    </Grid>
</Window>
