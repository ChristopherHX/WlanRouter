<Window x:Class="WlanRouter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WlanRouter"
        mc:Ignorable="d"
        Title="Wlan Router" Height="200" Width="350" ResizeMode="CanMinimize" Closing="Window_Closing">
    <Grid>
        <Button x:Name="Steuer_Taste" Content="Wlan Router starten" Margin="5,5,5,95" FontSize="29.333"/>
        <ComboBox x:Name="Internet_Freigabe_Auswahlbox" SelectedValuePath="Content" SelectedIndex="0" VerticalAlignment="Bottom" Height="25" Margin="5,0,5,65" FontSize="14.667"/>
        <TextBox x:Name="Name_Textbox" TextWrapping="NoWrap" FontSize="16" VerticalAlignment="Bottom" Height="25" Margin="5,0,5,35" MaxLines="1" IsUndoEnabled="False"/>
        <PasswordBox x:Name="Passwort_Pbox" FontSize="16" VerticalAlignment="Bottom" Height="25" Margin="5,0,38,5"/>
        <TextBox x:Name="Passwort_Tbox" Visibility="Collapsed" FontSize="16" VerticalAlignment="Bottom" Height="25" Margin="5,0,38,5"/>
        <Button x:Name="Passwort_STaste" VerticalAlignment="Bottom" Margin="0,0,5,5" Height="25" HorizontalAlignment="Right" Width="28" Content="abc"/>
    </Grid>
</Window>